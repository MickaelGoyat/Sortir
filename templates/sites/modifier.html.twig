{% include 'base.html.twig' %}
<div class="container-fluid">
    <h1>Modification d'un Site : </h1>
    <p>Numéro du site: <b>{{ site.noSite }}</b></p>
    <p>Nom du site: <b>{{ site.nomSite }}</b></p>

    {{ form_start(siteForm) }}
    {{ form_widget(siteForm) }}
    <button class="btn btn-primary" type="submit">Send</button>
    {{ form_end(siteForm) }}
    <td>
        <a href="{{ path('sitessites') }}">
            <h3>Revenir à la liste des sites</h3>
        </a>
    </td>
</div>
