{% include 'base.html.twig' %}
{% block body %}
    <title>Liste des lieux</title>
    <h1 class="text-center" style="margin-top:2rem;">Liste des lieux</h1>
    <div class="container">
    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">N°</th>
            <th scope="col">Nom de la sortie</th>
            <th scope="col">Date de la sortie</th>
            <th scope="col">Date fin de la sortie</th>
            <th scope="col">Nombre d'inscrits</th>
            <th scope="col">Durée de la sortie</th>
            <th scope="col">Descriptions et informations</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
        <div class="sorties">
            <tr>
                <td> {{ sortie.noSortie }}</td>
                <td> {{ sortie.nom }}</td>
                <td> {{ sortie.datedebut }}</td>
                <td> {{ sortie.datecloture }}</td>
                <td> {{ sortie.nbinscriptionsmax }}</td>
                <td> {{ sortie.duree }}</td>
                <td> {{ sortie.descriptioninfos }}</td>
                <td>
                    <a class="text-center" href="{{ path('sorties_modifier' , {'noSortie' : sortie.noSortie }) }}">
                        Modifier une sortie </a>
                </td>
            </tr>
            {% endfor %}
        </div>
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ 'add' }}">Ajouter une sortie</a>
    <div class="sorties">
    {% include 'footer.html.twig' %}
{% endblock %}